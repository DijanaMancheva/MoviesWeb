<style>
    body, html {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
    }

    .container {
        width: 100%;
        height: 100%;
    }

    .card {
        flex: 0 0 400px; /* Adjust the width of the cards here */
        margin-right: 15px;
        background-color: #333;
        color: white;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: 1px solid #444;
    }

        .card:hover {
            transform: scale(1.05); /* Slight zoom effect */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.6); /* Shadow effect */
        }

    .card-img-top {
        height: 500px;
        object-fit: cover;
        transition: opacity 0.3s ease;
    }

    .card:hover .card-img-top {
        opacity: 0.7; /* Dim image on hover */
    }


    .card-body {
        padding: 20px;
        background-color: #222;
        transition: background-color 0.3s ease;
    }

    .card:hover .card-body {
        background-color: #444; /* Darker background on hover */
    }

    .popup-content {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        background-color: rgba(0, 0, 0, 0.8);
        color: white;
        padding: 20px;
        opacity: 0;
        transform: translateY(100%);
        transition: all 0.3s ease-in-out;
        z-index: 10; /* Make sure it's on top */
        text-align: center;
        border-top: 1px solid #555;
    }

    .card:hover .popup-content {
        opacity: 1;
        transform: translateY(0);
    }

    .popup-content h3, .popup-content p {
        margin: 0;
        padding: 0;
        color: #ddd; /* Lighter text color */
    }

    .popup-content h3 {
        margin-bottom: 10px;
        font-size: 1.5rem;
    }

    .popup-content p {
        margin-bottom: 10px;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        padding: 10px;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

    .btn-danger {
        background-color: #E85858;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

    .container-fluid {
        padding-left: 0;
        padding-right: 0;
        margin: 0;
        width: 100%;
    }

    .card-columns {
        display: flex;
        flex-wrap: nowrap;
        overflow-x: auto; /* Allows horizontal scrolling if the cards overflow */
        padding: 10px 0;
    }

        .card-columns::-webkit-scrollbar {
            height: 8px; /* Scrollbar height */
        }

        .card-columns::-webkit-scrollbar-thumb {
            background-color: tomato; /* Scrollbar thumb color */
            border-radius: 4px;
        }

            .card-columns::-webkit-scrollbar-thumb:hover {
                background: #555; /* Scrollbar thumb color on hover */
            }

        .card-columns .card {
            max-width: 400px;
            flex: 0 0 400px; /* Card width */
        }

    .card h3,
    .card p,
    .card .btn {
        margin: 0;
        padding: 0;
    }

    .card h3 {
        font-size: 3rem;
        margin-bottom: 0.5rem;
    }

    .card p {
        font-size: 2.000 rem;
        margin-bottom: 0.5rem;
    }

    .card .btn {
        margin-top: 0.5rem;
    }

    .carousel-inner, .swiper-wrapper {
        width: 100%;
    }

    .swiper-slide {
        height: 100%; /* Ensure slides fill the container */
    }


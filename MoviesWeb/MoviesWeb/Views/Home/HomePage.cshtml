    .carousel-item img {
        width: 100vw; /* Fullscreen width */
        height: 100vh; /* Fullscreen height */
        object-fit: cover;
    }

    #slider img {
        width: 100%;
        height: auto;
        object-fit: cover;
    }

    #slider {
        height: 800px; /* Example height */
    }

    .button-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 1.5 vh; /* Makes the container fill the viewport height */
    }

    .form-check {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 1.5 vh;
    }

    .filtertitle {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 1.5 vh;
        color: red;
        font-style: italic;
        font-family: 'Lobster', cursive;
    }

    .btn-gradient {
        font-size: 1.5rem; /* Adjusts the button text size */
        padding: 15px 30px; /* Increases button size */
        border-radius: 8px;
        background: linear-gradient(to right, #ff7e5f, #feb47b); /* Example gradient */
        border: none;
        color: white;
        text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
        transition: background 0.3s ease;
    }

        .btn-gradient:hover {
            background: linear-gradient(to right,#feb47b, #ff7e5f); /* Hover effect */
        }
</style>

